body {
  background: #111;
  color: #fff;
  font-family: sans-serif;
  text-align: center;
}

.hidden { display: none; }

#header {
  padding: 15px;
  font-size: 20px;
  background: #000;
}

button {
  padding: 10px 20px;
  margin: 10px;
  cursor: pointer;
}

#slots {
  display: grid;
  grid-template-columns: repeat(3, 60px);
  gap: 15px;
  justify-content: center;
  margin-top: 20px;
}

.slot {
  width: 55px;
  height: 55px;
  border-radius: 50%;
  background: #555;
}

.slot.active {
  background: #2ecc71;
}

.player {
  margin: 5px;
}
