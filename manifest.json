body {
  margin: 0;
  font-family: sans-serif;
  background: #0f0f0f;
  color: #fff;
  text-align: center;
}

header {
  background: #1c1c1c;
  padding: 15px;
  font-size: 20px;
}

main {
  padding: 20px;
}

button {
  padding: 10px 20px;
  margin: 10px;
  background: #8b0000;
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 16px;
  cursor: pointer;
}

button:hover {
  background: #a80000;
}

.hidden {
  display: none;
}

#players {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  gap: 10px;
  margin-top: 20px;
}

.player {
  background: #1e1e1e;
  padding: 10px;
  border-radius: 8px;
}

.dead {
  opacity: 0.4;
  text-decoration: line-through;
}
